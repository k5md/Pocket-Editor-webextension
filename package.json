{
  "name": "Pocket-Editor-webextension",
  "scripts": {
    "build-dev": "npx rimraf ./dist && npx webpack --config ./webpack.dev.js",
    "build-prod": "npx rimraf ./dist && npx webpack --config ./webpack.prod.js",
    "browser-firefox": "npx web-ext run -t firefox-desktop --config .web-ext-config.js",
    "pack": "npm run build-prod && npx web-ext build --config .web-ext-config.js",
    "watch": "npm run build-dev && npx concurrently \"npx webpack --config ./webpack.dev.js --watch\" \"npx web-ext run --config .web-ext-config.js\"",
    "lint": "npx eslint --ext js,jsx ."
  },
  "author": "k5md",
